{
  "name": "liveview-native-vscode",
  "displayName": "LiveView Native",
  "description": "",
  "icon": "icon.png",
  "publisher": "DockYard, Inc.",
  "version": "0.2.0-rc.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:phoenix-heex",
    "onLanguage:elixir"
  ],
  "main": "./out/extension.js",
  "repository": "https://github.com/liveview-native/liveview-native-vscode",
  "contributes": {
    "languages": [{
      "id": "lvn-heex",
      "aliases": [
        "LiveView Native HEEx"
      ],
      "extensions": [
        "swiftui.heex"
      ],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [
      {
        "language": "lvn-heex",
        "scopeName": "source.lvn-heex",
        "path": "./syntaxes/lvn-heex.json"
      },
      {
        "scopeName": "source.elixir.lvn-heex",
        "path": "./syntaxes/elixir-lvn-heex.json",
        "injectTo": [
          "source.elixir"
        ],
        "embeddedLanguages": {
          "text.swiftui.heex": "phoenix-heex"
        }
      },
      {
        "scopeName": "source.elixir.lvn-sheet",
        "path": "./syntaxes/elixir-lvn-sheet.json",
        "injectTo": [
          "source.elixir"
        ],
        "embeddedLanguages": {
          "text.stylesheet.sheet": "elixir"
        }
      },
      {
        "scopeName": "source.elixir.lvn-sheet-rules",
        "path": "./syntaxes/elixir-lvn-sheet-rules.json",
        "injectTo": [
          "source.elixir"
        ],
        "embeddedLanguages": {
          "text.stylesheet.sheet-rules": "elixir"
        }
      }
    ],
    "commands": [
      {
        "command": "liveviewnative.clearCache",
        "title": "Clear Cache"
      }
    ],
    "configuration": {
      "title": "LiveView Native",
      "properties": {
        "liveViewNative.swiftUI.documentationSource": {
          "type": "string",
          "default": "hosted",
          "enum": [
            "hosted",
            "local"
          ],
          "enumItemLabels": [
            "Hosted",
            "Local"
          ],
          "enumDescriptions": [
            "Use documentation from the internet",
            "Build documentation from the local `liveview-client-swiftui` declared in the `mix.exs` file"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "glob": "^8.1.0"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  }
}
